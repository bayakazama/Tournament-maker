<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Tournament Brackets - Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/styles/css/main.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/brackets-viewer@latest/dist/brackets-viewer.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/brackets-viewer@latest/dist/brackets-viewer.min.js"></script>
</head>
<body>
    <%- include('partials/nav') %>
    
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h1>Tournament Brackets Management</h1>
                
                <div class="my-4">
                    <h2>Active Tournaments</h2>
                    <div class="list-group">
                        <% tournaments.filter(t => t.status === 'active').forEach(tournament => { %>
                            <a href="/tournaments/<%= tournament._id %>" class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1"><%= tournament.name %></h5>
                                    <small><%= new Date(tournament.startDate).toLocaleDateString() %></small>
                                </div>
                                <p class="mb-1">Participants: <%= tournament.participants.length %></p>
                                <small>Created by: <%= tournament.creator.username %></small>
                            </a>
                        <% }); %>
                    </div>
                </div>

                <div class="my-4">
                    <h2>Pending Tournaments</h2>
                    <div class="list-group">
                        <% tournaments.filter(t => t.status === 'pending').forEach(tournament => { %>
                            <a href="/tournaments/<%= tournament._id %>" class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1"><%= tournament.name %></h5>
                                    <small><%= new Date(tournament.startDate).toLocaleDateString() %></small>
                                </div>
                                <p class="mb-1">Participants: <%= tournament.participants.length %></p>
                                <% if (user && tournament.creator._id.toString() === user._id.toString()) { %>
                                    <button class="btn btn-primary btn-sm mt-2" 
                                            onclick="generateBracket('<%= tournament._id %>')">
                                        Generate Bracket
                                    </button>
                                <% } %>
                            </a>
                        <% }); %>
                    </div>
                </div>

                <div class="my-4">
                    <h2>Completed Tournaments</h2>
                    <div class="list-group">
                        <% tournaments.filter(t => t.status === 'completed').forEach(tournament => { %>
                            <a href="/tournaments/<%= tournament._id %>" class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1"><%= tournament.name %></h5>
                                    <small>Completed: <%= new Date(tournament.endDate).toLocaleDateString() %></small>
                                </div>
                                <p class="mb-1">Winner: <%= tournament.winner ? tournament.winner.name : 'No winner yet' %></p>
                            </a>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        async function generateBracket(tournamentId) {
            try {
                const response = await fetch(`/api/tournaments/${tournamentId}/generate-bracket`, {
                    method: 'POST'
                });
                
                if (!response.ok) {
                    throw new Error('Failed to generate bracket');
                }
                
                location.reload();
            } catch (error) {
                console.error('Error:', error);
                alert('Failed to generate bracket. Please try again.');
            }
        }
    </script>
</body>
</html>
