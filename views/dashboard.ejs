<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tournament Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
</head>
<body>

    <div class="dashboard-header bg-primary text-white py-4">
        <div class="container">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <img class="avatar rounded-circle me-3" src="https://cdn.discordapp.com/avatars/<%= user.discordId %>/<%= user.avatar %>.webp?size=80" 
                         alt="Avatar" width="50" height="50">
                    <div>
                        <h1 class="mb-0 h3">Welcome, <%= user.username %>!</h1>
                        <p class="mb-0 opacity-75">Manage your tournaments and brackets</p>
                    </div>
                </div>
                <a href="/logout" class="btn btn-outline-light">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </a>
            </div>
        </div>
    </div>

    <div class="container mt-4">
        <!-- Tournament Actions -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <h2>Your Tournaments</h2>
                    <a href="/dashboard/create-tournament" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create Tournament
                    </a>
                </div>
            </div>
        </div>

        <!-- Error Display -->
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <!-- Tournaments List -->
        <div class="row">
            <% if (tournaments && tournaments.length > 0) { %>
                <% tournaments.forEach(tournament => { %>
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="card-title mb-0"><%= tournament.name %></h5>
                                    <span class="badge <%= tournament.status === 'active' ? 'bg-success' : tournament.status === 'completed' ? 'bg-secondary' : 'bg-warning' %>">
                                        <%= tournament.status %>
                                    </span>
                                </div>
                                
                                <% if (tournament.description) { %>
                                    <p class="card-text text-muted small"><%= tournament.description %></p>
                                <% } %>
                                
                                <div class="small text-muted mb-3">
                                    <i class="bi bi-calendar"></i> Created <%= new Date(tournament.createdAt).toLocaleDateString() %>
                                    <br>
                                    <i class="bi bi-people"></i> Max <%= tournament.maxParticipants %> participants
                                </div>
                            </div>
                            <div class="card-footer bg-transparent">
                                <div class="d-flex gap-2">
                                    <a href="/dashboard/tournament/<%= tournament._id %>/manage" class="btn btn-sm btn-primary flex-fill">
                                        <i class="bi bi-gear"></i> Manage
                                    </a>
                                    <a href="/tournament/<%= tournament._id %>" class="btn btn-sm btn-outline-primary flex-fill">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    <button class="btn btn-sm btn-outline-danger" onclick="deleteTournament('<%= tournament._id %>')">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12">
                    <div class="text-center py-5">
                        <i class="bi bi-trophy display-1 text-muted"></i>
                        <h3 class="mt-3">No tournaments yet</h3>
                        <p class="text-muted">Create your first tournament to get started!</p>
                        <a href="/dashboard/create-tournament" class="btn btn-primary btn-lg">
                            <i class="bi bi-plus-circle"></i> Create Your First Tournament
                        </a>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function deleteTournament(tournamentId) {
            if (!confirm('Are you sure you want to delete this tournament? This action cannot be undone.')) {
                return;
            }

            try {
                const response = await fetch(`/dashboard/tournament/${tournamentId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const result = await response.json();

                if (response.ok) {
                    // Reload the page to show updated tournament list
                    window.location.reload();
                } else {
                    alert('Error: ' + result.error);
                }
            } catch (error) {
                console.error('Error deleting tournament:', error);
                alert('Failed to delete tournament. Please try again.');
            }
        }
    </script>
</body>
</html>
