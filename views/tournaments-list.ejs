<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Tournaments - Tournament Maker</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
</head>
<body>

    <nav class="navbar navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-trophy"></i> Tournament Maker
            </a>
            <div class="navbar-nav ms-auto">
                <% if (user) { %>
                    <div class="d-flex align-items-center text-white">
                        <a href="/dashboard" class="btn btn-outline-light me-2">Dashboard</a>
                        <img class="rounded-circle me-2" src="https://cdn.discordapp.com/avatars/<%= user.discordId %>/<%= user.avatar %>.webp?size=40" 
                             alt="Avatar" width="30" height="30">
                        <%= user.username %>
                    </div>
                <% } else { %>
                    <a href="/auth/discord" class="btn btn-outline-light">
                        <i class="bi bi-discord"></i> Login with Discord
                    </a>
                <% } %>
            </div>
        </div>
    </nav>

    <div class="hero-section bg-light py-5">
        <div class="container text-center">
            <h1 class="display-4 mb-3">All Tournaments</h1>
            <p class="lead text-muted">Discover and participate in exciting tournaments</p>
        </div>
    </div>

    <div class="container mt-4">
        <!-- Error Display -->
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle"></i> <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <!-- Tournament Filters -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control" id="searchInput" placeholder="Search tournaments...">
                </div>
            </div>
            <div class="col-md-3">
                <select class="form-select" id="statusFilter">
                    <option value="">All Status</option>
                    <option value="pending">Pending</option>
                    <option value="active">Active</option>
                    <option value="completed">Completed</option>
                </select>
            </div>
            <div class="col-md-3">
                <select class="form-select" id="sortBy">
                    <option value="newest">Newest First</option>
                    <option value="oldest">Oldest First</option>
                    <option value="name">Name A-Z</option>
                </select>
            </div>
        </div>

        <!-- Tournaments Grid -->
        <div class="row" id="tournamentsGrid">
            <% if (tournaments && tournaments.length > 0) { %>
                <% tournaments.forEach(tournament => { %>
                    <div class="col-md-6 col-lg-4 mb-4 tournament-card" 
                         data-name="<%= tournament.name.toLowerCase() %>" 
                         data-status="<%= tournament.status %>"
                         data-created="<%= tournament.createdAt %>">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="card-title mb-0">
                                        <a href="/tournament/<%= tournament._id %>" 
                                           class="text-decoration-none">
                                            <%= tournament.name %>
                                        </a>
                                    </h5>
                                    <span class="badge <%= tournament.status === 'active' ? 'bg-success' : tournament.status === 'completed' ? 'bg-secondary' : 'bg-warning' %>">
                                        <%= tournament.status %>
                                    </span>
                                </div>
                                
                                <% if (tournament.description) { %>
                                    <p class="card-text text-muted small mb-2"><%= tournament.description %></p>
                                <% } %>
                                
                                <div class="small text-muted mb-3">
                                    <div class="d-flex align-items-center mb-1">
                                        <i class="bi bi-person me-2"></i>
                                        <span>Created by <%= tournament.creator ? tournament.creator.username : 'Unknown' %></span>
                                    </div>
                                    <div class="d-flex align-items-center mb-1">
                                        <i class="bi bi-calendar me-2"></i>
                                        <span><%= new Date(tournament.createdAt).toLocaleDateString() %></span>
                                    </div>
                                    <% if (tournament.maxParticipants) { %>
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-people me-2"></i>
                                            <span>Up to <%= tournament.maxParticipants %> participants</span>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                            <div class="card-footer bg-transparent">
                                <div class="d-flex gap-2">
                                    <a href="/tournament/<%= tournament._id %>" 
                                       class="btn btn-primary flex-fill">
                                        <i class="bi bi-eye"></i> View Tournament
                                    </a>
                                    <% if (user && tournament.creator && user._id.toString() === tournament.creator._id.toString()) { %>
                                        <a href="/dashboard/tournament/<%= tournament._id %>/manage" 
                                           class="btn btn-outline-primary">
                                            <i class="bi bi-gear"></i> Manage
                                        </a>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12">
                    <div class="text-center py-5">
                        <i class="bi bi-trophy display-1 text-muted"></i>
                        <h3 class="mt-3">No tournaments found</h3>
                        <p class="text-muted">Be the first to create a tournament!</p>
                        <% if (user) { %>
                            <a href="/dashboard/create-tournament" class="btn btn-primary btn-lg">
                                <i class="bi bi-plus-circle"></i> Create Tournament
                            </a>
                        <% } else { %>
                            <a href="/auth/discord" class="btn btn-primary btn-lg">
                                <i class="bi bi-discord"></i> Login to Create Tournament
                            </a>
                        <% } %>
                    </div>
                </div>
            <% } %>
        </div>

        <!-- Load More Button (if needed for pagination later) -->
        <% if (tournaments && tournaments.length >= 20) { %>
            <div class="text-center mt-4">
                <button class="btn btn-outline-primary" id="loadMore">
                    <i class="bi bi-arrow-down"></i> Load More Tournaments
                </button>
            </div>
        <% } %>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container text-center">
            <p class="mb-0">
                <i class="bi bi-trophy"></i> Tournament Maker - Create and manage your tournaments with ease
            </p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const statusFilter = document.getElementById('statusFilter');
            const sortBy = document.getElementById('sortBy');
            const tournamentsGrid = document.getElementById('tournamentsGrid');
            const tournamentCards = Array.from(document.querySelectorAll('.tournament-card'));

            // Search functionality
            searchInput.addEventListener('input', filterTournaments);
            statusFilter.addEventListener('change', filterTournaments);
            sortBy.addEventListener('change', sortTournaments);

            function filterTournaments() {
                const searchTerm = searchInput.value.toLowerCase();
                const statusValue = statusFilter.value;

                tournamentCards.forEach(card => {
                    const name = card.dataset.name;
                    const status = card.dataset.status;
                    
                    const matchesSearch = !searchTerm || name.includes(searchTerm);
                    const matchesStatus = !statusValue || status === statusValue;
                    
                    if (matchesSearch && matchesStatus) {
                        card.style.display = 'block';
                        card.classList.remove('d-none');
                    } else {
                        card.style.display = 'none';
                        card.classList.add('d-none');
                    }
                });

                // Show/hide no results message
                const visibleCards = tournamentCards.filter(card => !card.classList.contains('d-none'));
                updateNoResultsMessage(visibleCards.length === 0);
            }

            function sortTournaments() {
                const sortValue = sortBy.value;
                
                tournamentCards.sort((a, b) => {
                    switch (sortValue) {
                        case 'oldest':
                            return new Date(a.dataset.created) - new Date(b.dataset.created);
                        case 'name':
                            return a.dataset.name.localeCompare(b.dataset.name);
                        case 'newest':
                        default:
                            return new Date(b.dataset.created) - new Date(a.dataset.created);
                    }
                });

                // Re-append sorted cards to the grid
                tournamentCards.forEach(card => {
                    tournamentsGrid.appendChild(card);
                });
            }

            function updateNoResultsMessage(show) {
                let noResultsMsg = document.getElementById('noResultsMessage');
                
                if (show && !noResultsMsg) {
                    noResultsMsg = document.createElement('div');
                    noResultsMsg.id = 'noResultsMessage';
                    noResultsMsg.className = 'col-12';
                    noResultsMsg.innerHTML = `
                        <div class="text-center py-5">
                            <i class="bi bi-search display-1 text-muted"></i>
                            <h3 class="mt-3">No tournaments found</h3>
                            <p class="text-muted">Try adjusting your search or filter criteria</p>
                        </div>
                    `;
                    tournamentsGrid.appendChild(noResultsMsg);
                } else if (!show && noResultsMsg) {
                    noResultsMsg.remove();
                }
            }
        });
    </script>
</body>
</html>
